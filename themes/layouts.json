{
  "disc": "layout themes. reference https://github.com/Mikata-Project/ggthemr/blob/master/R/layouts.R",

  "themes": [

    {
      "name": "clean",

      "disc": "no ticks & no grids",

      "plot": {
        "title": {
          "face": "bold",
          "hjust": 1
        },
        "axis": {
          "title": { "face": "bold" },
          "left": {}, "bottom": {}, "right": null, "top":  null,
          "baseline": { "width": 1 },
          "tick": { "inside": 0, "outside": 0 },
          "subtick": null
        },
        "grid": null
      }
    },

    {
      "name": "scientific",

      "disc": "no ticks & with dashed gridline & with dotted sub-gridline",

      "plot": {
        "base": "clean",
        "title": {
          "face": "bold",
          "hjust": 0
        },
        "grid": {
          "major": { "style": "dash" },
          "minor": { "style": "dot" }
        }
      }
    },

    {
      "name": "plain",

      "disc": "no ticks & no sub-gridline & with solid gridline",

      "plot": {
        "base": "scientific",

        "grid": {
          "major": { "style": "solid" },
          "minor": null
        }
      }
    },

    {
      "name": "clear",

      "disc": "no ticks & no sub-gridline & with dashed gridline",

      "plot": {
        "base": "scientific",

        "grid": { "minor": null }
      }
    },

    {
      "name": "minimal",

      "disc": "no ticks & no girds & no axis-lines",

      "plot": {
        "base": "clean",

        "axis": {
          "title": { "face": "palin" },
          "baseline": null
        }
      }
    },

    {
      "name": "pastel",

      "disc": "no ticks & no sub-gridline & with dashed gridline & with thicker axis-lines",

      "plot": {
        "base": "clean",

        "axis": {
          "baseline": { "width": 3 }
        },

        "grid": {
          "major": { "style": "dash" },
          "minor": null
        }
      }
    }
  ]
}
