{
  "group": "ggthemr",

  "desc": "layout themes from ggthemr. see https://github.com/Mikata-Project/ggthemr",

  "layout": [

    {
      "name": "void",

      "disc": "no axis & no girds & no legned & no margins",

      "axis": null,

      "grid": null,

      "legend": null,

      "margins": null
      },

    {
      "name": "clean",

      "disc": "no ticks & no grids",

      "title": {
        "face": "bold",
        "hjust": 1
      },

      "axis": {
        "title": { "face": "bold" },

        "left": {
          "baseline": true,
          "label": true,
          "tick": null
        },
        "bottom": {
          "baseline": true,
          "label": true,
          "tick": null
        },
        "right": null,
        "top": null,
        "margins": null
      },

      "grid": null,

      "margins": [ 15, 15, 15, 15 ]
    },

    {
      "name": "scientific",

      "disc": "dashed gridline & dotted sub-gridline & no ticks",

      "base": "clean",

      "title": {
        "face": "bold",
        "hjust": 0
      },

      "grid": {
        "major": {
          "visible": true,
          "style": "dash"
        },

        "minor": {
          "visible": true,
          "style": "dot"
        },
         
        "zeroline": null
        }
    },

    {
      "name": "clear",

      "disc": "dashed gridline & no ticks & no sub-gridline",

      "base": "scientific",

      "grid": { "minor": null }
    },

    {
      "name": "plain",

      "disc": "solid gridline & no ticks & no sub-gridline",

      "base": "clear",

      "grid": {
        "major": "solid"
      }
    }
  ]
}
