{
  "group": "ggthemr",

  "desc": "layout themes from ggthemr. see https://github.com/Mikata-Project/ggthemr",

  "layout": [

    {
      "name": "void",

      "disc": "no axis & no girds & no legned & no margins",

      "axis": null,

      "grid": null,

      "legend": null,

      "margins": null
    },

    {
      "name": "frame",

      "disc": "no ticks & no grids",

      "title": {
        "face": "bold",
        "hjust": 1
      },

      "axis": {
        "title": { "face": "bold" },

        "left": {
          "visible":  true,
          "baseline": true,
          "label": true,
          "tick": null
        },
        "bottom": {
          "visible": true,
          "baseline": true,
          "label": true,
          "tick": null
        },
        "floor-right": {
          "visible": true,
          "baseline": true,
          "label": true,
          "tick": null
        },

        "right": null,
        "top": null,
        "far-left": null,
        "far-right": null,
        "far-bottom": null,
        "far-top": null,
        "floor-left": null,
        "ceil-left": null,
        "ceil-right": null,

        "margins": null
      },

      "grid": null,

      "margins": [ 15, 15, 15, 15 ]
    },

    {
      "name": "box",

      "base": "frame",

      "axis": {
        "right": { "label": null },
        "top": { "label": null },
        "far-left": { "label": null },
        "far-right": { "label": null },
        "far-bottom": { "label": null },
        "far-top": { "label": null },
        "floor-left": { "label": null },
        "ceil-left": { "label": null },
        "ceil-right": { "label": null }
      }
    },

    {
      "name": "scientific",

      "disc": "dashed gridline & dotted sub-gridline & no ticks",

      "base": "frame",

      "title": {
        "face": "bold",
        "hjust": 0
      },

      "grid": {
        "major": {
          "visible": true,
          "style": "dash"
        },

        "minor": {
          "visible": true,
          "style": "dot"
        },

        "zeroline": null
      }
    },

    {
      "name": "clear",

      "disc": "dashed gridline & no ticks & no sub-gridline",

      "base": "scientific",

      "grid": { "minor": null }
    },

    {
      "name": "plain",

      "disc": "solid gridline & no ticks & no sub-gridline",

      "base": "frame",

      "grid": {
        "major": "solid"
      }
    }
  ]
}
