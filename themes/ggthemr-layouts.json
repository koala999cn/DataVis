{
  "group": "ggthemr",

  "desc": "layout themes from ggthemr. see https://github.com/Mikata-Project/ggthemr",

  "layout": [

    {
      "name": "void",

      "disc": "no axis & no girds & no legned & no margins",

      "axis": null,

      "grid": null,

      "legend": null,

      "margins": null
    },

    {
      "name": "clean",

      "disc": "no ticks & no grids",

      "title": {
        "face": "bold",
        "hjust": 1
      },

      "axis": {
        "title": { "face": "bold" },
        "label": {},
        "left": "solid",
        "bottom": "solid",
        "right": "NA",
        "top": "NA",
        "tick": "NA"
      },

      "grid": "NA",

      "margins": [ 15, 15, 15, 15 ]
    },

    {
      "name": "scientific",

      "disc": "dashed gridline & dotted sub-gridline & no ticks",

      "base": "clean",

      "title": {
        "face": "bold",
        "hjust": 0
      },

      "grid": {
        "major": "dash",
        "minor": "dot",
        "zeroline": "NA"
      }
    },

    {
      "name": "clear",

      "disc": "dashed gridline & no ticks & no sub-gridline",

      "base": "scientific",

      "grid": { "minor": null }
    },

    {
      "name": "plain",

      "disc": "solid gridline & no ticks & no sub-gridline",

      "base": "clear",

      "grid": {
        "major": "solid"
      }
    }
  ]
}
